<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop Recommendation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/inputHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Humidity (%)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/inputN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nitrogen (N) level"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/inputP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phosphorus (P) level"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/inputK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Potassium (K) level"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/inputTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Temperature (Â°C)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/inputRainfall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rainfall (mm)"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/buttonRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommend Crop"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/outputCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
